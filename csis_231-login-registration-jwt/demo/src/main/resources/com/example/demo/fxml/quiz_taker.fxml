<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.quiz.QuizTakerController"
            prefWidth="900" prefHeight="640"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#onBack" styleClass="ghost-button"/>
                <Label fx:id="quizTitleLabel" text="Quiz" styleClass="toolbar-title-small"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="progressLabel" text="Question" styleClass="light-label"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="16" styleClass="padded-section">
            <children>
                <Label fx:id="questionLabel" text="Question will appear here" wrapText="true" styleClass="title-label"/>
                <VBox fx:id="answersBox" spacing="10"/>
                <Button fx:id="nextButton" text="Next" onAction="#onNext" styleClass="primary-button"
                        maxWidth="Infinity" defaultButton="true"/>
            </children>
        </VBox>
    </center>
</BorderPane>
