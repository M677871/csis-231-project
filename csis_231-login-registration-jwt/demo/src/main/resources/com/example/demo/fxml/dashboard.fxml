<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- High-level attractive Dashboard built to match DashboardController:
     - fx:id: welcome, name, email, role
     - onLogout() only (no extra handlers required)
     - loads styles.css for the glass/modern look
-->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.DashboardController"
            prefWidth="1180" prefHeight="720">

    <!-- Top Bar -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Label text="UOB Portal" style="-fx-font-size: 20px; -fx-font-weight: 900;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Controller sets this -->
                <Label fx:id="welcome" text="Welcome ðŸ‘‹"
                       style="-fx-font-weight: 700; -fx-text-fill: #111827;"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="20" alignment="TOP_LEFT" style="-fx-padding: 22;">
                    <children>

                        <!-- Section title -->
                        <Label text="Overview" styleClass="title-label"/>

                        <!-- Responsive 3-column grid -->
                        <GridPane hgap="18" vgap="18">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="33"/>
                                <ColumnConstraints percentWidth="33"/>
                                <ColumnConstraints percentWidth="34"/>
                            </columnConstraints>

                            <children>
                                <!-- Profile Card (auto-bound to your labels) -->
                                <VBox spacing="12" styleClass="card" GridPane.columnIndex="0">
                                    <children>
                                        <Label text="Profile" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <GridPane hgap="10" vgap="8">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="35"/>
                                                <ColumnConstraints percentWidth="65"/>
                                            </columnConstraints>
                                            <children>
                                                <Label text="Name"  styleClass="subtitle-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                                <Label fx:id="name" text=""               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                                <Label text="Email" styleClass="subtitle-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                                <Label fx:id="email" text=""              GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                                <Label text="Role"  styleClass="subtitle-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                                <Label fx:id="role" text=""               GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <!-- Quick Actions -->
                                <VBox spacing="12" styleClass="card" GridPane.columnIndex="1">
                                    <children>
                                        <Label text="Quick Actions" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <FlowPane hgap="10" vgap="10">
                                            <children>
                                                <Button text="Manage Users"  styleClass="primary-button"/>
                                                <Button text="Courses"       styleClass="ghost-button"/>
                                                <Button text="Reports"       styleClass="ghost-button"/>
                                                <Button text="Settings"      styleClass="ghost-button"/>
                                            </children>
                                        </FlowPane>
                                    </children>
                                </VBox>

                                <!-- Notifications -->
                                <VBox spacing="10" styleClass="card" GridPane.columnIndex="2">
                                    <children>
                                        <Label text="Notifications" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <VBox spacing="6">
                                            <children>
                                                <Label text="â€¢ Password reset is enabled" styleClass="subtitle-label"/>
                                                <Label text="â€¢ 2FA required for admins"   styleClass="subtitle-label"/>
                                                <Label text="â€¢ New release available"     styleClass="subtitle-label"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- Recent Activity -->
                                <VBox spacing="10" styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="Recent Activity" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <VBox spacing="6">
                                            <children>
                                                <Label text="â€¢ New student registered"         styleClass="subtitle-label"/>
                                                <Label text="â€¢ Instructor added CSIS206 lab"   styleClass="subtitle-label"/>
                                                <Label text="â€¢ Profile data synced"            styleClass="subtitle-label"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>

                                <!-- Statistics -->
                                <VBox spacing="10" styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="Stats" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <GridPane hgap="14" vgap="10">
                                            <columnConstraints>
                                                <ColumnConstraints percentWidth="50"/>
                                                <ColumnConstraints percentWidth="50"/>
                                            </columnConstraints>
                                            <children>
                                                <VBox spacing="6" GridPane.columnIndex="0">
                                                    <children>
                                                        <Label text="Students" styleClass="subtitle-label"/>
                                                        <Label text="1,240"/>
                                                    </children>
                                                </VBox>
                                                <VBox spacing="6" GridPane.columnIndex="1">
                                                    <children>
                                                        <Label text="Instructors" styleClass="subtitle-label"/>
                                                        <Label text="42"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                </VBox>

                                <!-- Help -->
                                <VBox spacing="10" styleClass="card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="Help and Support" style="-fx-font-weight: 800; -fx-font-size: 14px;"/>
                                        <Label text="Need assistance? Contact support@uob.example" styleClass="subtitle-label"/>
                                        <HBox spacing="10">
                                            <children>
                                                <Button text="Docs"    styleClass="ghost-button"/>
                                                <Button text="Contact" styleClass="ghost-button"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
