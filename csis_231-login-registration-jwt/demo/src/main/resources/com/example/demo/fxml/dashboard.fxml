<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.DashboardController"
            prefWidth="1180" prefHeight="720">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Label text="UOB Portal" style="-fx-font-size: 20px; -fx-font-weight: 900;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcome" text="Welcome" style="-fx-font-weight: 700; -fx-text-fill: #111827;"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="24" style="-fx-padding: 26;">
                    <children>
                        <Label text="Overview" styleClass="title-label"/>

                        <HBox spacing="24">
                            <!-- Profile -->
                            <VBox spacing="14" styleClass="card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="Profile" style="-fx-font-weight: 800; -fx-font-size: 15px;"/>
                                    <GridPane hgap="10" vgap="8">
                                        <columnConstraints>
                                            <ColumnConstraints percentWidth="35"/>
                                            <ColumnConstraints percentWidth="65"/>
                                        </columnConstraints>
                                        <children>
                                            <Label text="Name"  styleClass="subtitle-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                            <Label fx:id="name" text="" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                            <Label text="Email" styleClass="subtitle-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                            <Label fx:id="email" text="" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                            <Label text="Role"  styleClass="subtitle-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                            <Label fx:id="role" text="" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                        </children>
                                    </GridPane>
                                </children>
                            </VBox>

                            <!-- Quick Actions -->
                            <VBox spacing="16" styleClass="card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="Quick Actions" style="-fx-font-weight: 800; -fx-font-size: 15px;"/>
                                    <VBox spacing="12">
                                        <children>
                                            <Button text="User Management" styleClass="primary-button"  onAction="#openUsers"/>
                                            <Button text="Category Management" styleClass="ghost-button" onAction="#openCategories"/>
                                        </children>
                                    </VBox>
                                    <Label text="Tip: You can return here anytime." styleClass="muted"/>
                                </children>
                            </VBox>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
