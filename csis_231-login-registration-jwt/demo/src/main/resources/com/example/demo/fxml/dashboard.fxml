<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.DashboardController"
            prefWidth="1280" prefHeight="800"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Label text="ðŸš€ Learn Online" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #FFFFFF;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcome" text="Welcome" style="-fx-font-weight: 700; -fx-text-fill: #FFFFFF; -fx-font-size: 16px;"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding>
                <Insets top="16" bottom="16" left="24" right="24"/>
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="32" style="-fx-padding: 32;">
                    <children>
                        <Label text="Dashboard Overview" styleClass="title-label"/>

                        <HBox spacing="24" alignment="TOP_LEFT">
                            <!-- Profile Card -->
                            <VBox spacing="20" styleClass="card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="ðŸ‘¤ Profile" style="-fx-font-weight: 800; -fx-font-size: 18px; -fx-text-fill: #FFFFFF;"/>
                                    <GridPane hgap="16" vgap="12">
                                        <columnConstraints>
                                            <ColumnConstraints percentWidth="35"/>
                                            <ColumnConstraints percentWidth="65"/>
                                        </columnConstraints>
                                        <children>
                                            <Label text="Name"  styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                            <Label fx:id="name" text="" style="-fx-font-weight: 600; -fx-text-fill: #FFFFFF;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                            <Label text="Email" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                            <Label fx:id="email" text="" style="-fx-font-weight: 600; -fx-text-fill: #FFFFFF;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                            <Label text="Role"  styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                            <Label fx:id="role" text="" style="-fx-font-weight: 600; -fx-text-fill: #FFFFFF;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                        </children>
                                    </GridPane>
                                </children>
                            </VBox>

                            <!-- Quick Actions Card -->
                            <VBox spacing="20" styleClass="card" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="âš¡ Quick Actions" style="-fx-font-weight: 800; -fx-font-size: 18px; -fx-text-fill: #FFFFFF;"/>
                                    <VBox spacing="16">
                                        <children>
                                            <Button text="ðŸ‘¥ User Management" styleClass="primary-button" onAction="#openUsers" maxWidth="Infinity"/>
                                            <Button text="ðŸ“ Category Management" styleClass="secondary-button" onAction="#openCategories" maxWidth="Infinity"/>
                                        </children>
                                    </VBox>
                                    <Label text="ðŸ’¡ Tip: You can return here anytime from any management screen." styleClass="muted"/>
                                </children>
                            </VBox>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>