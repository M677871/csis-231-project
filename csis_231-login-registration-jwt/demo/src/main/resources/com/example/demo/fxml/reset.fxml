<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.ResetController"
            prefWidth="900" prefHeight="560">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">
            <children>
                <VBox spacing="18" alignment="CENTER">
                    <children>
                        <Label text="Reset your password" styleClass="title-label"/>
                        <Label text="Enter the code sent to your email and choose a new password" styleClass="subtitle-label"/>
                        <VBox spacing="16" maxWidth="520" styleClass="form-card">
                            <children>
                                <GridPane hgap="12" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="40"/>
                                        <ColumnConstraints percentWidth="60"/>
                                    </columnConstraints>
                                    <children>
                                        <Label text="Email" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                        <TextField fx:id="email" promptText="student@example.com" styleClass="form-field"
                                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                        <Label text="Code" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                        <TextField fx:id="code" promptText="6-digit code" styleClass="form-field"
                                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                        <Label text="New password" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                        <PasswordField fx:id="newPassword" promptText="••••••••" styleClass="password-field"
                                                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                                    </children>
                                </GridPane>

                                <Button text="Change password" onAction="#onReset" styleClass="primary-button" maxWidth="Infinity"/>
                                <Button text="Back to login" onAction="#goLogin" styleClass="ghost-button" maxWidth="Infinity"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
