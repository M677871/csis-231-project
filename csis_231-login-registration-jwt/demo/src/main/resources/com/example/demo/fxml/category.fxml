<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TableView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.admin.CategoryController"
            prefWidth="1280" prefHeight="800"
            styleClass="glass-pane">

    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#backToMain" styleClass="ghost-button"/>
                <Label text="Category Management"
                       styleClass="toolbar-title-large"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="24" styleClass="page-section">
                    <children>

                        <VBox spacing="20" styleClass="management-card">
                            <children>

                                <!-- Filter Toolbar + Count -->
                                <VBox spacing="10">
                                    <children>
                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Categories" styleClass="title-label"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Label fx:id="categoryCountLabel" text="0 items" styleClass="muted"/>
                                            </children>
                                        </HBox>

                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <children>
                                                <TextField fx:id="categorySearchField"
                                                           promptText="Search categories..."
                                                           styleClass="rounded-text-field"
                                                           prefWidth="360"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Table -->
                                <TableView fx:id="categoryTable"
                                           prefHeight="520"
                                           tableMenuButtonVisible="true">
                                    <!-- FIX: use property element + fx:constant for resize policy -->
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>

                                    <placeholder><Label text="No categories found"/></placeholder>
                                    <columns>
                                        <TableColumn fx:id="categoryIdColumn"   text="ID"   prefWidth="120"/>
                                        <TableColumn fx:id="categoryNameColumn" text="Name" prefWidth="560"/>
                                    </columns>
                                </TableView>

                                <!-- Form -->
                                <Label text="Manage Categories"
                                       styleClass="form-title"/>

                                <GridPane hgap="16" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="20"/>
                                        <ColumnConstraints percentWidth="80"/>
                                    </columnConstraints>

                                    <Label text="Category Name" styleClass="field-label"
                                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <TextField fx:id="categoryNameField" promptText="Enter category name"
                                               styleClass="rounded-text-field" onAction="#onSubmitCategory"
                                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                </GridPane>

                                <!-- Actions -->
                                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="actions-bar">
                                    <children>
                                        <Button text="Add Category" onAction="#onAddCategory" styleClass="primary-button"/>
                                        <Button text="Update Category" onAction="#onUpdateCategory" styleClass="secondary-button"/>
                                        <Button text="Delete Category" onAction="#onDeleteCategory" styleClass="danger-button"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
