<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.CategoryController"
            prefWidth="1280" prefHeight="800"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#backToMain" styleClass="ghost-button"/>
                <Label text="Category Management" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #FFFFFF;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding>
                <Insets top="16" bottom="16" left="24" right="24"/>
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="24" style="-fx-padding: 32;">
                    <children>
                        <VBox spacing="20" styleClass="management-card">
                            <children>
                                <Label text="Category List" style="-fx-font-size: 20px; -fx-font-weight: 800; -fx-text-fill: #FFFFFF;"/>
                                <TableView fx:id="categoryTable" prefHeight="400">
                                    <columns>
                                        <TableColumn fx:id="categoryIdColumn"   text="ID"   prefWidth="100"/>
                                        <TableColumn fx:id="categoryNameColumn" text="Name" prefWidth="380"/>
                                    </columns>
                                </TableView>

                                <Label text="Manage Categories" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #FFFFFF; -fx-padding: 16 0 8 0;"/>

                                <GridPane hgap="16" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="30"/>
                                        <ColumnConstraints percentWidth="70"/>
                                    </columnConstraints>
                                    <children>
                                        <Label text="Category Name" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <TextField fx:id="categoryNameField" promptText="Enter category name"
                                                   styleClass="rounded-text-field"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                                                   GridPane.columnSpan="3"/>
                                    </children>
                                </GridPane>

                                <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 16 0 0 0;">
                                    <children>
                                        <Button text="Add Category" onAction="#onAddCategory" styleClass="primary-button"/>
                                        <Button text="Update Category" onAction="#onUpdateCategory" styleClass="secondary-button"/>
                                        <Button text="Delete Category" onAction="#onDeleteCategory" styleClass="danger-button"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>