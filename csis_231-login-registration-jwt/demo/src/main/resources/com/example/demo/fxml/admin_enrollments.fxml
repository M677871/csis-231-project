<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.admin.AdminEnrollmentsController"
            prefWidth="1200" prefHeight="780"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#backToDashboard" styleClass="ghost-button"/>
                <Label text="Enrollments &amp; Courses" style="-fx-font-size: 22px; -fx-font-weight: 900; -fx-text-fill: #FFFFFF;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="16" style="-fx-padding: 24;">
            <children>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Student username/email" styleClass="field-label"/>
                    <TextField fx:id="studentIdentifierField" promptText="Enter username or email" styleClass="rounded-text-field" prefWidth="240"/>
                    <Button text="Load Enrollments" fx:id="loadStudentButton" onAction="#onLoadStudent" styleClass="primary-button"/>
                    <Label fx:id="studentStatusLabel" text="" styleClass="muted"/>
                </HBox>

                <TableView fx:id="enrollmentTable" prefHeight="300">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="courseIdColumn" text="Course ID" prefWidth="120"/>
                        <TableColumn fx:id="courseTitleColumn" text="Course Title" prefWidth="320"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="enrolledAtColumn" text="Enrolled At" prefWidth="220"/>
                    </columns>
                    <placeholder><Label text="No enrollments"/></placeholder>
                </TableView>

                <Separator/>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="Instructor username/email" styleClass="field-label"/>
                    <TextField fx:id="instructorIdentifierField" promptText="Enter username or email" styleClass="rounded-text-field" prefWidth="240"/>
                    <Button text="Load Courses" fx:id="loadInstructorButton" onAction="#onLoadInstructor" styleClass="secondary-button"/>
                    <Label fx:id="instructorStatusLabel" text="" styleClass="muted"/>
                </HBox>

                <TableView fx:id="instructorCourseTable" prefHeight="300">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="instructorCourseIdColumn" text="Course ID" prefWidth="120"/>
                        <TableColumn fx:id="instructorCourseTitleColumn" text="Course Title" prefWidth="320"/>
                        <TableColumn fx:id="instructorCoursePublishedColumn" text="Published" prefWidth="140"/>
                    </columns>
                    <placeholder><Label text="No courses"/></placeholder>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
