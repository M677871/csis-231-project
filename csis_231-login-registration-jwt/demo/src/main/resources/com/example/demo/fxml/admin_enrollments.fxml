<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.admin.AdminEnrollmentsController"
            prefWidth="1200" prefHeight="820"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#backToDashboard" styleClass="ghost-button"/>
                <Label text="Enrollments &amp; Courses" styleClass="toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="content-scroll">
            <content>
                <VBox spacing="18" styleClass="padded-section">
                    <children>
                        <Label text="Student Enrollments" styleClass="title-label"/>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="Student username/email" styleClass="field-label"/>
                            <TextField fx:id="studentIdentifierField" promptText="Enter username or email" styleClass="rounded-text-field" prefWidth="260"
                                       onAction="#onLoadStudent"/>
                            <Button text="Load Enrollments" fx:id="loadStudentButton" onAction="#onLoadStudent" styleClass="primary-button"/>
                            <Label fx:id="studentStatusLabel" text="" styleClass="muted"/>
                        </HBox>

                        <TableView fx:id="enrollmentTable" prefHeight="260">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="courseIdColumn" text="Course ID" prefWidth="100"/>
                                <TableColumn fx:id="courseTitleColumn" text="Course Title" prefWidth="200"/>
                                <TableColumn fx:id="studentNameColumn" text="Student" prefWidth="160"/>
                                <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="200"/>
                                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                                <TableColumn fx:id="enrolledAtColumn" text="Enrolled At" prefWidth="180"/>
                            </columns>
                            <placeholder><Label text="No enrollments"/></placeholder>
                        </TableView>

                        <Separator/>
                        <Label text="Instructor Courses &amp; Enrollments" styleClass="title-label"/>

                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="Instructor" styleClass="field-label"/>
                            <ComboBox fx:id="instructorPicker" promptText="Select instructor" prefWidth="240"/>
                            <Label text="Course name" styleClass="field-label"/>
                            <TextField fx:id="courseNameField" promptText="Exact course title" styleClass="rounded-text-field" prefWidth="240"
                                       onAction="#onCourseNameEnter"/>
                            <Button text="Load Courses" fx:id="loadInstructorButton" onAction="#onLoadInstructor" styleClass="secondary-button"/>
                            <Button text="Load Enrollments" fx:id="loadCourseEnrollmentsButton" onAction="#onLoadCourseEnrollments" styleClass="primary-button"/>
                            <Label fx:id="instructorStatusLabel" text="" styleClass="muted"/>
                        </HBox>

                        <TableView fx:id="instructorCourseTable" prefHeight="220">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="instructorCourseIdColumn" text="Course ID" prefWidth="120"/>
                                <TableColumn fx:id="instructorCourseTitleColumn" text="Course Title" prefWidth="320"/>
                                <TableColumn fx:id="instructorCoursePublishedColumn" text="Published" prefWidth="120"/>
                            </columns>
                            <placeholder><Label text="No courses"/></placeholder>
                        </TableView>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
