<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.OtpController"
            prefWidth="900" prefHeight="560">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">
            <children>
                <VBox spacing="18" alignment="CENTER">
                    <children>
                        <Label text="Two-step verification 🔐" styleClass="title-label"/>
                        <Label text="Enter the code we sent to your email" styleClass="subtitle-label"/>
                        <VBox spacing="16" maxWidth="420" styleClass="form-card">
                            <children>
                                <Label text="Verification code" styleClass="field-label"/>
                                <TextField fx:id="code" promptText="6-digit code" styleClass="form-field"/>

                                <Button text="Verify" onAction="#onVerify" styleClass="primary-button" maxWidth="Infinity"/>

                                <HBox alignment="CENTER">
                                    <children>
                                        <Label text="Didn't get the code?" styleClass="subtitle-label"/>
                                        <Hyperlink text="Resend" onAction="#onResend"/>
                                    </children>
                                    <spacing>6</spacing>
                                </HBox>

                                <Button text="Back" onAction="#goLogin" styleClass="ghost-button" maxWidth="Infinity"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
