<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.LoginController"
            prefWidth="1000" prefHeight="700">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">
            <children>
                <VBox spacing="24" alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" spacing="8">
                            <children>
                                <Label text="ðŸ‘‹ Welcome Back" styleClass="title-label"/>
                                <Label text="Sign in to your Learn Online account" styleClass="subtitle-label"/>
                            </children>
                        </VBox>

                        <VBox spacing="20" maxWidth="420" styleClass="form-card">
                            <children>
                                <GridPane hgap="16" vgap="16">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="100"/>
                                    </columnConstraints>
                                    <children>
                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                            <children>
                                                <Label text="Username" styleClass="field-label"/>
                                                <TextField fx:id="username" promptText="Enter your username" styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                            <children>
                                                <Label text="Password" styleClass="field-label"/>
                                                <PasswordField fx:id="password" promptText="Enter your password" styleClass="password-field"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>

                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Hyperlink text="ðŸ”’ Forgot password?" onAction="#goForgot" style="-fx-font-weight: 600;"/>
                                    </children>
                                </HBox>

                                <Button text="Sign In â†’" onAction="#onLogin" styleClass="primary-button" maxWidth="Infinity"/>

                                <HBox alignment="CENTER" spacing="8">
                                    <children>
                                        <Label text="Don't have an account?" styleClass="subtitle-label"/>
                                        <Hyperlink text="Create account" onAction="#goRegister" style="-fx-font-weight: 600;"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>