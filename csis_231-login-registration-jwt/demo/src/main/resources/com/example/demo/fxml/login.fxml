<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.auth.LoginController"
            prefWidth="1000" prefHeight="700">

        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">

                <VBox spacing="24" alignment="CENTER">

                        <VBox alignment="CENTER" spacing="8">

                                <Label text="ðŸ‘‹ Welcome Back" styleClass="title-label"/>
                                <Label text="Sign in to your Learn Online account" styleClass="subtitle-label"/>

                        </VBox>

                        <VBox spacing="20" maxWidth="420" styleClass="form-card">

                                <GridPane hgap="16" vgap="16">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="100"/>
                                    </columnConstraints>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">

                                                <Label text="Username" styleClass="field-label"/>
                                                <TextField fx:id="username" promptText="Enter your username" styleClass="form-field"
                                                           onAction="#onLogin"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">

                                                <Label text="Password" styleClass="field-label"/>
                                                <PasswordField fx:id="password" promptText="Enter your password" styleClass="password-field"
                                                               onAction="#onLogin"/>

                                        </VBox>

                                </GridPane>

                                <HBox alignment="CENTER_RIGHT">

                                        <Hyperlink text="ðŸ”’ Forgot password?" onAction="#goForgot" styleClass="link-medium"/>

                                </HBox>

                                <Button text="Sign In â†’" onAction="#onLogin" styleClass="primary-button"
                                        maxWidth="Infinity" defaultButton="true"/>

                                <HBox alignment="CENTER" spacing="8">

                                        <Label text="Don't have an account?" styleClass="subtitle-label"/>
                                        <Hyperlink text="Create account" onAction="#goRegister" styleClass="link-medium"/>

                                </HBox>

                        </VBox>

                </VBox>

        </StackPane>

</AnchorPane>
