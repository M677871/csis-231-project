<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.LoginController"
            prefWidth="820" prefHeight="520" styleClass="root">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <VBox spacing="18" alignment="CENTER" styleClass="auth-surface">
                    <children>
                        <Label text="Welcome back" styleClass="title-label"/>
                        <Label text="Sign in to continue" styleClass="subtitle-label"/>
                        <VBox spacing="10" styleClass="form-card">
                            <children>
                                <VBox spacing="6">
                                    <Label text="Username" styleClass="field-label"/>
                                    <TextField fx:id="username" promptText="Enter your username" styleClass="form-field"/>
                                </VBox>
                                <VBox spacing="6">
                                    <Label text="Password" styleClass="field-label"/>
                                    <PasswordField fx:id="password" promptText="Enter your password" styleClass="form-field"/>
                                </VBox>
                                <Button text="Login" onAction="#onLogin" maxWidth="Infinity" styleClass="primary-button"/>
                                <HBox alignment="CENTER" spacing="10">
                                    <Hyperlink text="Register" onAction="#goRegister"/>
                                    <Label text="â€¢"/>
                                    <Hyperlink text="Forgot password?" onAction="#goForgot"/>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>