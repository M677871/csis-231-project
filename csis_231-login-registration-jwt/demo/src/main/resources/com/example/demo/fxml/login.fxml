<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.LoginController"
            prefWidth="900" prefHeight="560">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">
            <children>
                <VBox spacing="18" alignment="CENTER">
                    <children>
                        <Label text="Welcome back ðŸ‘‹" styleClass="title-label"/>
                        <Label text="Sign in to your account" styleClass="subtitle-label"/>
                        <VBox spacing="14" maxWidth="460" styleClass="form-card">
                            <children>
                                <GridPane hgap="12" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="40"/>
                                        <ColumnConstraints percentWidth="60"/>
                                    </columnConstraints>
                                    <children>
                                        <Label text="Username" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                        <TextField fx:id="username" promptText="username" styleClass="form-field"
                                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                        <Label text="Password" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                        <PasswordField fx:id="password" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" styleClass="password-field"
                                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                    </children>
                                </GridPane>

                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Hyperlink text="Forgot password?" onAction="#goForgot"/>
                                    </children>
                                </HBox>

                                <Button text="Sign in" onAction="#onLogin" styleClass="primary-button" maxWidth="Infinity"/>

                                <HBox alignment="CENTER">
                                    <children>
                                        <Label text="Don't have an account?" styleClass="subtitle-label"/>
                                        <Hyperlink text="Create account" onAction="#goRegister" />
                                    </children>
                                    <spacing>6</spacing>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
