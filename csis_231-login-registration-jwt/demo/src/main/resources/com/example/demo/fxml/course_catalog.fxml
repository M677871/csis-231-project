<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.course.CourseCatalogController"
            prefWidth="1200" prefHeight="800"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back" onAction="#onBack" styleClass="ghost-button"/>
                <Label text="Course Catalog" styleClass="toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="statusLabel" text="" styleClass="muted"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="16" styleClass="padded-section">
            <children>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Search courses..." styleClass="rounded-text-field" HBox.hgrow="ALWAYS"/>
                    <Button text="Refresh" onAction="#onRefresh" fx:id="refreshButton" styleClass="ghost-button"/>
                    <Button text="Open Detail" onAction="#onOpenCourseDetail" styleClass="secondary-button"/>
                </HBox>

                <TableView fx:id="courseTable" prefHeight="640">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="280"/>
                        <TableColumn fx:id="instructorColumn" text="Instructor" prefWidth="180"/>
                        <TableColumn fx:id="publishedColumn" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="actionColumn" text="Action" prefWidth="160"/>
                    </columns>
                    <placeholder><Label text="No courses found"/></placeholder>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
