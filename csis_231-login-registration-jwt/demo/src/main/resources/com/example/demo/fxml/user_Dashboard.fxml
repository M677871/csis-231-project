<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.admin.UserController"
            prefWidth="1280" prefHeight="800"
            styleClass="glass-pane">

    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back to Dashboard" onAction="#backToMain" styleClass="ghost-button"/>
                <Label text="ðŸ‘¥ User Management"
                       styleClass="toolbar-title-large"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding><Insets top="16" bottom="16" left="24" right="24"/></padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="24" styleClass="page-section">
                    <children>

                        <VBox spacing="20" styleClass="management-card">
                            <children>

                                <!-- Filter Toolbar + Count -->
                                <VBox spacing="10">
                                    <children>
                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="Users" styleClass="title-label"/>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Label fx:id="userCountLabel" text="0 items" styleClass="muted"/>
                                            </children>
                                        </HBox>

                                        <HBox spacing="12" alignment="CENTER_LEFT">
                                            <children>
                                                <TextField fx:id="userSearchField"
                                                           promptText="Search by username, email, name, phone..."
                                                           styleClass="rounded-text-field"
                                                           prefWidth="360"/>
                                                <ChoiceBox fx:id="roleFilter" styleClass="rounded-choice-box" prefWidth="180">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="All Roles"/>
                                                            <String fx:value="STUDENT"/>
                                                            <String fx:value="INSTRUCTOR"/>
                                                            <String fx:value="ADMIN"/>
                                                        </FXCollections>
                                                    </items>
                                                </ChoiceBox>
                                                <ChoiceBox fx:id="activeFilterChoice" styleClass="rounded-choice-box" prefWidth="160">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="All"/>
                                                            <String fx:value="Active"/>
                                                            <String fx:value="Inactive"/>
                                                        </FXCollections>
                                                    </items>
                                                </ChoiceBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Users Table -->
                                <TableView fx:id="userTable"
                                           prefHeight="520"
                                           tableMenuButtonVisible="true">
                                    <!-- JavaFX 17-friendly resize policy -->
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <placeholder><Label text="No users found"/></placeholder>
                                    <columns>
                                        <TableColumn fx:id="userIdColumn"      text="ID"         prefWidth="80"/>
                                        <TableColumn fx:id="userNameColumn"    text="Username"   prefWidth="140"/>
                                        <TableColumn fx:id="userEmailColumn"   text="Email"      prefWidth="220"/>
                                        <TableColumn fx:id="firstNameColumn"   text="First Name" prefWidth="140"/>
                                        <TableColumn fx:id="lastNameColumn"    text="Last Name"  prefWidth="140"/>
                                        <TableColumn fx:id="phoneColumn"       text="Phone"      prefWidth="140"/>
                                        <TableColumn fx:id="userRoleColumn"    text="Role"       prefWidth="120"/>
                                        <TableColumn fx:id="activeColumn"      text="Active"     prefWidth="90"/>
                                        <TableColumn fx:id="twoFaColumn"       text="2FA"        prefWidth="90"/>
                                        <TableColumn fx:id="emailVerColumn"    text="Verified"   prefWidth="110"/>
                                    </columns>
                                </TableView>

                                <!-- Form -->
                                <Label text="Manage Users"
                                       styleClass="form-title-spacious"/>

                                <GridPane hgap="16" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                    </columnConstraints>

                                    <!-- Row 0 -->
                                    <Label text="Username" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <TextField fx:id="userNameField" promptText="Username" styleClass="rounded-text-field"
                                               GridPane.columnIndex="1" GridPane.rowIndex="0"
                                               onAction="#onSubmitUser"/>

                                    <Label text="Email" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                    <TextField fx:id="userEmailField" promptText="name@example.com" styleClass="rounded-text-field"
                                               GridPane.columnIndex="3" GridPane.rowIndex="0"
                                               onAction="#onSubmitUser"/>

                                    <!-- Row 1 -->
                                    <Label text="First Name" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                    <TextField fx:id="firstNameField" promptText="First name" styleClass="rounded-text-field"
                                               GridPane.columnIndex="1" GridPane.rowIndex="1"
                                               onAction="#onSubmitUser"/>

                                    <Label text="Last Name" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                    <TextField fx:id="lastNameField" promptText="Last name" styleClass="rounded-text-field"
                                               GridPane.columnIndex="3" GridPane.rowIndex="1"
                                               onAction="#onSubmitUser"/>

                                    <!-- Row 2 -->
                                    <Label text="Phone" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                    <TextField fx:id="phoneField" promptText="+961..." styleClass="rounded-text-field"
                                               GridPane.columnIndex="1" GridPane.rowIndex="2"
                                               onAction="#onSubmitUser"/>

                                    <Label text="Password" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                    <PasswordField fx:id="userPasswordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="3" GridPane.rowIndex="2"
                                                   onAction="#onSubmitUser"/>

                                    <!-- Row 3 -->
                                    <Label text="Role" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                    <ChoiceBox fx:id="userRoleChoiceBox" styleClass="rounded-choice-box"
                                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                    <CheckBox fx:id="activeCheck" text="Active" styleClass="check-box"
                                              GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                    <CheckBox fx:id="twoFaCheck" text="2FA" styleClass="check-box"
                                              GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                                    <CheckBox fx:id="emailVerifiedCheck" text="Verified" styleClass="check-box"
                                              GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                                </GridPane>

                                <!-- Actions -->
                                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="actions-bar-roomy">
                                    <children>
                                        <Button text="Add User" onAction="#onAddUser" styleClass="primary-button"/>
                                        <Button text="Update User" onAction="#onUpdateUser" styleClass="secondary-button"/>
                                        <Button text="Delete User" onAction="#onDeleteUser" styleClass="danger-button"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
