<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.UserController"
            prefWidth="1280" prefHeight="800"
            styleClass="glass-pane">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <children>
                <Button text="â† Back to Dashboard" onAction="#backToMain" styleClass="ghost-button"/>
                <Label text="ðŸ‘¥ User Management" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: #1A202C;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
            </children>
            <padding>
                <Insets top="16" bottom="16" left="24" right="24"/>
            </padding>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="content-scroll">
            <content>
                <VBox spacing="24" style="-fx-padding: 32;">
                    <children>
                        <VBox spacing="20" styleClass="management-card">
                            <children>
                                <Label text="Users List" style="-fx-font-size: 20px; -fx-font-weight: 800; -fx-text-fill: #1A202C;"/>
                                <TableView fx:id="userTable" prefHeight="400">
                                    <columns>
                                        <TableColumn fx:id="userIdColumn"      text="ID"         prefWidth="80"/>
                                        <TableColumn fx:id="userNameColumn"    text="Username"   prefWidth="140"/>
                                        <TableColumn fx:id="userEmailColumn"   text="Email"      prefWidth="200"/>
                                        <TableColumn fx:id="firstNameColumn"   text="First Name" prefWidth="120"/>
                                        <TableColumn fx:id="lastNameColumn"    text="Last Name"  prefWidth="120"/>
                                        <TableColumn fx:id="phoneColumn"       text="Phone"      prefWidth="130"/>
                                        <TableColumn fx:id="userRoleColumn"    text="Role"       prefWidth="100"/>
                                        <TableColumn fx:id="activeColumn"      text="Active"     prefWidth="80"/>
                                        <TableColumn fx:id="twoFaColumn"       text="2FA"        prefWidth="80"/>
                                        <TableColumn fx:id="emailVerColumn"    text="Verified"   prefWidth="90"/>
                                    </columns>
                                </TableView>

                                <Label text="Manage Users" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #2D3748; -fx-padding: 20 0 12 0;"/>

                                <GridPane hgap="16" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                        <ColumnConstraints percentWidth="25"/>
                                    </columnConstraints>
                                    <children>
                                        <Label text="Username" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <TextField fx:id="userNameField" promptText="Username" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                        <Label text="Email" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                        <TextField fx:id="userEmailField" promptText="Email" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                                        <Label text="Password" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <PasswordField fx:id="userPasswordField" promptText="(leave blank to keep unchanged)"
                                                       styleClass="rounded-text-field"
                                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                        <Label text="First Name" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                        <TextField fx:id="firstNameField" promptText="First name" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                                        <Label text="Last Name" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="lastNameField" promptText="Last name" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                                        <Label text="Phone" styleClass="field-label" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                        <TextField fx:id="phoneField" promptText="Phone" styleClass="rounded-text-field"
                                                   GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                                        <Label text="Role" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                        <ChoiceBox fx:id="userRoleChoiceBox" styleClass="rounded-choice-box"
                                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                                        <CheckBox fx:id="activeCheck"       text="Active"        styleClass="check-box" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                        <CheckBox fx:id="twoFaCheck"        text="Two-Factor"    styleClass="check-box" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                                        <CheckBox fx:id="emailVerifiedCheck" text="Email Verified" styleClass="check-box" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                                    </children>
                                </GridPane>

                                <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 20 0 0 0;">
                                    <children>
                                        <Button text="Add User" onAction="#onAddUser" styleClass="primary-button"/>
                                        <Button text="Update User" onAction="#onUpdateUser" styleClass="secondary-button"/>
                                        <Button text="Delete User" onAction="#onDeleteUser" styleClass="danger-button"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>