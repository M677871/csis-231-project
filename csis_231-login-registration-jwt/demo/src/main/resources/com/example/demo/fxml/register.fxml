<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.auth.RegisterController"
            prefWidth="1100" prefHeight="750">

        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                   styleClass="auth-surface">

                <VBox spacing="24" alignment="CENTER">

                        <VBox alignment="CENTER" spacing="8">

                                <Label text="✨ Create Your Account" styleClass="title-label"/>
                                <Label text="Join Learn Online today - it's fast and easy" styleClass="subtitle-label"/>

                        </VBox>

                        <VBox spacing="20" maxWidth="520" styleClass="form-card">

                                <GridPane hgap="16" vgap="16">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>


                                        <!-- Left Column -->
                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">

                                                <Label text="Username" styleClass="field-label"/>
                                                <TextField fx:id="username" promptText="Choose a username" styleClass="form-field"
                                                           onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">

                                                <Label text="Email" styleClass="field-label"/>
                                                <TextField fx:id="email" promptText="your@email.com" styleClass="form-field"
                                                           onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">

                                                <Label text="Password" styleClass="field-label"/>
                                                <PasswordField fx:id="password" promptText="Create a password" styleClass="password-field"
                                                               onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">

                                                <Label text="Confirm Password" styleClass="field-label"/>
                                                <PasswordField fx:id="confirmPassword" promptText="Confirm your password" styleClass="password-field"
                                                               onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">

                                                <Label text="First Name" styleClass="field-label"/>
                                                <TextField fx:id="firstName" promptText="First Name" styleClass="form-field"
                                                           onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">

                                                <Label text="Last Name" styleClass="field-label"/>
                                                <TextField fx:id="lastName" promptText="Last Name" styleClass="form-field"
                                                           onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">

                                                <Label text="Phone Number" styleClass="field-label"/>
                                                <TextField fx:id="phone" promptText="+961..." styleClass="form-field"
                                                           onAction="#onRegister"/>

                                        </VBox>

                                        <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">

                                                <Label text="Role" styleClass="field-label"/>
                                                <ComboBox fx:id="role" styleClass="combo-field" promptText="Select your role">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="Student"/>
                                                            <String fx:value="Instructor"/>
                                                        </FXCollections>
                                                    </items>
                                                </ComboBox>

                                        </VBox>

                                </GridPane>

                                <Button text="Create Account →" onAction="#onRegister" styleClass="primary-button"
                                        maxWidth="Infinity" defaultButton="true"/>

                                <HBox alignment="CENTER" spacing="8">

                                        <Label text="Already have an account?" styleClass="subtitle-label"/>
                                        <Hyperlink text="Sign In" onAction="#goLogin" styleClass="link-medium"/>

                                </HBox>

                        </VBox>

                </VBox>

        </StackPane>

</AnchorPane>
