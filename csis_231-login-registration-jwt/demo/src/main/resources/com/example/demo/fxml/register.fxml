<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.RegisterController"
            prefWidth="900" prefHeight="560" styleClass="root">
    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <VBox spacing="18" alignment="CENTER" styleClass="auth-surface">
                    <children>
                        <Label text="Create account" styleClass="title-label"/>
                        <VBox spacing="10" styleClass="form-card">
                            <children>
                                <GridPane hgap="14" vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>
                                    <children>
                                        <VBox GridPane.columnIndex="0" spacing="6">
                                            <Label text="Username" styleClass="field-label"/>
                                            <TextField fx:id="username" promptText="john" styleClass="form-field"/>
                                        </VBox>
                                        <VBox GridPane.columnIndex="1" spacing="6">
                                            <Label text="Email" styleClass="field-label"/>
                                            <TextField fx:id="email" promptText="john@site.com" styleClass="form-field"/>
                                        </VBox>
                                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="6">
                                            <Label text="Password" styleClass="field-label"/>
                                            <PasswordField fx:id="password" promptText="••••••••" styleClass="form-field"/>
                                        </VBox>
                                        <VBox GridPane.columnIndex="0" spacing="6">
                                            <Label text="First name" styleClass="field-label"/>
                                            <TextField fx:id="firstName" promptText="John" styleClass="form-field"/>
                                        </VBox>
                                        <VBox GridPane.columnIndex="1" spacing="6">
                                            <Label text="Last name" styleClass="field-label"/>
                                            <TextField fx:id="lastName" promptText="Doe" styleClass="form-field"/>
                                        </VBox>


                                    </children>
                                </GridPane>
                                <Button text="Register" onAction="#onRegister" maxWidth="Infinity" styleClass="primary-button"/>
                                <Hyperlink text="Back to Login" onAction="#goLogin"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>